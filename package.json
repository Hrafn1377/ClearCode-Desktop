{
  "name": "clearcode-desktop",
  "version": "1.0.0",
  "description": "ClearCode - Professional Desktop Code Editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "code-editor",
    "electron",
    "accessibility",
    "developer-tools"
  ],
  "author": {
    "name": "Hrafn",
    "email": "hrafn1377@gmail.com"
  },
  "homepage": "https://hrafn1377.github.io/clearcode/",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.hrafn.clearcode",
    "productName": "ClearCode",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development",
      "maintainer": "Hrafn <hrafn1377@gmail.com>"
    }
  }
}
