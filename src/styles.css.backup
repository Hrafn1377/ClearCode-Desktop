/* ClearCode Desktop Styles */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body, html {
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

#app {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* Menu Bar */
.menu-bar {
    height: 30px;
    background: var(--menubar-bg);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;
    font-size: 12px;
    color: var(--text-color);
    -webkit-app-region: drag;
}

.menu-bar button {
    -webkit-app-region: no-drag;
}

.app-title {
    font-weight: 600;
    color: var(--accent-color);
}

.desktop-badge {
    background: var(--accent-color);
    color: white;
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 10px;
}

/* Toolbar */
.toolbar {
    height: 50px;
    background: var(--toolbar-bg);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    padding: 0 10px;
    gap: 5px;
    flex-shrink: 0;
}

.toolbar-btn {
    background: transparent;
    border: 1px solid transparent;
    color: var(--text-color);
    padding: 6px 12px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
}

.toolbar-btn:hover {
    background: var(--button-hover-bg);
    border-color: var(--border-color);
}

.toolbar-separator {
    width: 1px;
    height: 30px;
    background: var(--border-color);
    margin: 0 5px;
}

.toolbar-spacer {
    flex: 1;
}

.theme-select, .font-select {
    background: var(--input-bg);
    border: 1px solid var(--border-color);
    color: var(--text-color);
    padding: 6px 10px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
}

/* Main Container */
.main-container {
    display: flex;
    flex: 1;
    overflow: hidden;
}

/* Sidebar */
.sidebar {
    width: 250px;
    background: var(--sidebar-bg);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s;
}

.sidebar.collapsed {
    transform: translateX(-250px);
}

.sidebar-header {
    padding: 15px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.sidebar-header h3 {
    font-size: 14px;
    color: var(--text-color);
}

.collapse-btn {
    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 14px;
}

.sidebar-content {
    flex: 1;
    overflow-y: auto;
    padding: 10px;
}

.file-tree {
    font-size: 13px;
}

.no-folder {
    color: var(--text-secondary);
    text-align: center;
    padding: 20px;
}

.file-tree-item {
    padding: 6px 10px;
    cursor: pointer;
    border-radius: 6px;
    color: var(--text-color);
}

.file-tree-item:hover {
    background: var(--hover-bg);
}

/* Editor Container */
.editor-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.file-tabs {
    background: var(--tabs-bg);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    padding: 0 5px;
}

.tab {
    background: var(--tab-inactive-bg);
    border: 1px solid var(--border-color);
    border-bottom: none;
    border-radius: 6px 6px 0 0;
    padding: 8px 12px;
    font-size: 13px;
    color: var(--text-secondary);
    margin-top: 5px;
}

.tab.active {
    background: var(--editor-bg);
    color: var(--text-color);
}

.editor-wrapper {
    flex: 1;
    display: flex;
    overflow: hidden;
}

.line-numbers {
    background: var(--linenumber-bg);
    border-right: 1px solid var(--border-color);
    padding: 10px 0;
    text-align: right;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 16px;
    line-height: 1.6;
    color: var(--linenumber-color);
    user-select: none;
    min-width: 50px;
    overflow: hidden;
}

.line-number {
    padding: 0 15px;
    height: 25.6px;
}

.line-number.active {
    background: var(--line-highlight-bg);
    color: var(--text-color);
}

.editor {
    flex: 1;
    background: var(--editor-bg);
    color: var(--text-color);
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 16px;
    line-height: 1.6;
    padding: 10px 15px;
    border: none;
    outline: none;
    resize: none;
    overflow: auto;
    tab-size: 4;
}

/* Search Panel */
.search-panel {
    background: var(--panel-bg);
    border-bottom: 1px solid var(--border-color);
    padding: 10px 15px;
    display: flex;
    gap: 8px;
}

.search-panel.hidden {
    display: none;
}

.search-row {
    display: flex;
    gap: 8px;
    width: 100%;
}

.search-panel input {
    flex: 1;
    background: var(--input-bg);
    border: 1px solid var(--border-color);
    color: var(--text-color);
    padding: 6px 10px;
    border-radius: 6px;
    font-size: 13px;
}

.search-panel button {
    background: var(--button-bg);
    border: 1px solid var(--border-color);
    color: var(--text-color);
    padding: 6px 12px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
}

.search-panel button:hover {
    background: var(--button-hover-bg);
}

/* Status Bar */
.status-bar {
    height: 25px;
    background: var(--statusbar-bg);
    border-top: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;
    font-size: 12px;
    color: var(--text-secondary);
}

/* Themes */
